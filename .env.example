# =============================================================================
# StudIQ Application Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Variables marked as REQUIRED must be set for the application to function
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Database and authentication service configuration

# REQUIRED - Your Supabase project URL
# Type: string (URL)
# Example: https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url

# REQUIRED - Supabase anonymous/public key for client-side operations
# Type: string (JWT token)
# Used for: Client-side database operations, authentication
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Alternative key name (fallback support)
# Type: string (JWT token)
# Note: NEXT_PUBLIC_SUPABASE_ANON_KEY takes precedence
NEXT_PUBLIC_SUPABASE_KEY=your-supabase-anon-key

# REQUIRED - Supabase service role key for server-side operations
# Type: string (JWT token)
# Used for: Admin operations, database migrations, server-side queries
# Security: Keep this secret, never expose to client-side code
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================
# Solana network and wallet configuration for Web3 features

# Solana RPC endpoint URL
# Type: string (URL)
# Default: https://api.devnet.solana.com
# Options: devnet, testnet, mainnet-beta endpoints
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Solana network environment
# Type: string
# Default: devnet
# Options: devnet, testnet, mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# OPTIONAL - Solana payer private key for NFT minting operations
# Type: string (base64 encoded private key)
# Used for: Server-side NFT minting, transaction signing
# Security: Keep this secret, only needed for NFT functionality
SOLANA_PAYER_KEY=your-base64-encoded-private-key

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# SendAI and OpenAI API configuration for AI-powered features

# REQUIRED - SendAI API key for AI-powered study materials
# Type: string (API key)
# Used for: Study material generation, content analysis
SENDAI_API_KEY=your-sendai-api-key

# OPTIONAL - SendAI API base URL for custom endpoints
# Type: string (URL)
# Default: Uses SendAI default endpoint if not specified
# Used for: Custom SendAI deployments or proxy configurations
SENDAI_API_URL=your-sendai-api-url

# OPTIONAL - OpenAI API key (fallback for SendAI)
# Type: string (API key)
# Used as: Fallback when SendAI key is not available
OPENAI_API_KEY=your-openai-api-key

# Public SendAI key for client-side operations (if needed)
# Type: string (API key)
# Note: Only use if client-side AI features are required
NEXT_PUBLIC_SENDAI_API_KEY=your-sendai-api-key

# =============================================================================
# EMAIL SERVICE CONFIGURATION (OPTIONAL)
# =============================================================================
# SMTP configuration for sending emails (notifications, invitations, etc.)

# SMTP server hostname
# Type: string
# Example: smtp.gmail.com, smtp.sendgrid.net
SMTP_HOST=your-smtp-host

# SMTP server port
# Type: number
# Default: 587
# Common ports: 587 (TLS), 465 (SSL), 25 (unsecured)
SMTP_PORT=587

# SMTP security mode
# Type: boolean
# Default: false
# Set to true for SSL connections (port 465)
SMTP_SECURE=false

# SMTP authentication username
# Type: string
# Usually your email address
SMTP_USER=your-email@example.com

# SMTP authentication password
# Type: string
# Your email password or app-specific password
SMTP_PASSWORD=your-email-password

# Email "From" address
# Type: string (email)
# Default: Uses SMTP_USER if not specified
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# General application settings and branding

# Application name for branding
# Type: string
# Default: StudIQ
# Used in: Email templates, UI headers, notifications
NEXT_PUBLIC_APP_NAME=StudIQ

# Application base URL
# Type: string (URL)
# Default: http://localhost:3000
# Used for: Email links, redirects, API callbacks
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# STORAGE CONFIGURATION (OPTIONAL)
# =============================================================================
# File storage and media handling configuration

# Supabase storage bucket for study materials
# Type: string
# Default: materials
# Used for: File uploads, document storage
NEXT_PUBLIC_MATERIALS_BUCKET=materials

# NFT storage API key for NFT metadata
# Type: string (API key)
# Used for: NFT metadata storage on IPFS
NEXT_PUBLIC_NFT_STORAGE_KEY=your-nft-storage-key

# =============================================================================
# ERROR REPORTING & MONITORING (OPTIONAL)
# =============================================================================
# Error tracking and monitoring configuration

# Error reporting endpoint for production monitoring
# Type: string (URL)
# Used for: Sending error reports to monitoring services
NEXT_PUBLIC_ERROR_REPORTING_ENDPOINT=your-error-reporting-url

# =============================================================================
# SYSTEM ENVIRONMENT VARIABLES
# =============================================================================
# These are automatically set by the runtime environment

# Node.js environment mode
# Type: string
# Values: development, production, test
# Automatically set by Next.js and deployment platforms
NODE_ENV=development

# =============================================================================
# QUICK SETUP GUIDE
# =============================================================================
# 1. Copy this file to .env.local
# 2. Set up a Supabase project and fill in SUPABASE variables (REQUIRED)
# 3. Get a SendAI API key and set SENDAI_API_KEY (REQUIRED)
# 4. Configure other services as needed for your use case
# 5. Restart your development server after making changes
#
# Minimum required variables for basic functionality:
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY
# - SENDAI_API_KEY
# =============================================================================